@model HomeViewModel

<section class="generic-banner relative">
    <div class="container">
        <div class="row height align-items-center justify-content-center">
            <div class="col-lg-10">
                <div class="generic-banner-content">

                    <div class="row justify-content-center align-items-center flex-column pb-30">
                        <h1>Lägg till ny kund</h1>                       
                    </div>
                    <div class="row justify-content-center align-items-start">
                        <form asp-action="CreateCustomer" asp-controller="Customer" method="post">
                            <div class="col-lg-12 cols">
                                <input type="text" placeholder="" class="form-control mb-20" asp-for="@Model.NewCustomerName">
                                <select placeholder="" class="form-control mb-20" asp-for="@Model.NewCustomerCountryId">
                                    @foreach (var country in Model.AllCountries)
	                                {
		                                <option value="@country.Id">@country.Name</option>
	                                }
                                </select>
                                <button type=submit class="genric-btn default circle mb-30">Spara</button>
                            </div>

                        </form>
                    </div>
                    <span> @Html.ValidationSummary(false, "", new { @class = "text-danger" })</span>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- About Generic Start -->
<div class="main-wrapper">
    <!-- Start service Area -->
    <section class="service-area pt-100" id="feature">
        <div class="container">
            <h3>Kundlista</h3>
            <div class="row">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Namn</th>
                            <th scope="col">Land</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var customer in Model.AllCustomers)
                        {
                            <tr>
                                <td scope="row">@customer.Name</td>                              
                                <td>@Model.AllCountries.Where(x => x.Id == customer.CountryId).FirstOrDefault().Name
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div>
    </section>
</div>